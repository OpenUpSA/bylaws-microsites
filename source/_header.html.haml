%header#header.microsite-header
  %nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.p-1(role="navigation")
    .container
      %a.navbar-brand.mr-5(href='/')
        %img.microsite-region-logo{src: config[:region].logo}
        .microsite-region-name #{config[:region].name} By-laws

      %button.navbar-toggler(type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation")
        %span.navbar-toggler-icon

      #navbarSupportedContent.collapse.navbar-collapse
        %form.form-inline.ml-auto.mr-3.my-2.my-lg-0(action="/search.html" method="get" role="search")
          %input.form-control(type="text" name="q" placeholder="Search" aria-label="Search")
          %input{type: "hidden", name: "region", value: config[:region]['code']}
        %ul.navbar-nav
          %li.nav-item
            %a.text-white{href: config[:region]['website-url']} #{config[:region].name} website â†’
