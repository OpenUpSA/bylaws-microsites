= wrap_layout :site do
  - content_for :head do
    = stylesheet_link_tag 'bylaw.css', media: "screen, print"

    %meta(property="og:type" content="article")
    %meta(property="og:description" content="#{act.title} for #{regions[act.locality].name}")
    %meta{property: "og:url", content: act_url(act, external: true)}

  %header
    .container
      = partial 'header', locals: {act: act}
      = yield_content :breadcrumbs

  %article
    .container
      = partial 'notices', locals: {act: act}
      = yield
